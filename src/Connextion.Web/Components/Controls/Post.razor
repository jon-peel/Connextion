<article class="post">
    <p>@ViewModel.Body</p>
    <footer>
        <LikeButton ViewModel="ViewModel.LikeButton" />
        <address>
            <time>@ViewModel.Time</time>
            by <NavLink rel="author" href="@ViewModel.AuthorProfileUrl">@ViewModel.PostedBy</NavLink>
        </address>
    </footer>
</article>

@code {
    [Parameter] public required PostViewModel ViewModel { get; init; }
}