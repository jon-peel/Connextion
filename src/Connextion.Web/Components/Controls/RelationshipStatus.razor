@using Connextion.ViewModels.Profiles
<span>
    @ViewModel.Description
    @if (ViewModel.CanFollow)
    {
        <button type="button" @onclick="ViewModel.FollowAsync">Follow</button>
    }
    @if (ViewModel.IsBusy)
    {
        <BusyIndicator />
    }
</span>



@code {
    [Parameter] public required RelationshipStatusViewModel ViewModel { get; init; }

    protected override Task OnInitializedAsync() => ViewModel.InitializeAsync();
}